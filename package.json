{
  "name": "canvas-cc-starter",
  "version": "0.0.0",
  "private": true,
  "description": "Build and test Drupal Canvas Code Components with this preconfigured development environment.",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/balintbrews/canvas-cc-starter.git"
  },
  "author": "Bálint Kléri (https://balintbrews.com)",
  "bugs": "https://github.com/balintbrews/canvas-cc-starter/issues",
  "homepage": "https://github.com/balintbrews/canvas-cc-starter#readme",
  "type": "module",
  "dependencies": {
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "drupal-canvas": "^0.2.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "tailwind-merge": "^3.4.0"
  },
  "devDependencies": {
    "@drupal-canvas/cli": "^0.6.2",
    "@drupal-canvas/eslint-config": "^0.1.1",
    "@eslint/js": "^9.39.1",
    "@ianvs/prettier-plugin-sort-imports": "^4.7.0",
    "@storybook/addon-docs": "^10.0.8",
    "@storybook/react-vite": "^10.0.8",
    "@tailwindcss/vite": "^4.1.17",
    "@vitejs/plugin-react": "^5.1.1",
    "@vitejs/plugin-react-swc": "^4.2.2",
    "baseline-browser-mapping": "^2.9.19",
    "eslint": "^9.39.1",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "eslint-plugin-storybook": "10.0.8",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "js-yaml": "^4.1.1",
    "lint-staged": "^16.2.6",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.7.1",
    "storybook": "^10.0.8",
    "tailwindcss": "^4.1.17",
    "vite": "^7.2.2"
  },
  "lint-staged": {
    "*.{js,jsx,json,html,md,mdx,yml}": "prettier --write",
    "*.{js,jsx}": "eslint --fix"
  },
  "scripts": {
    "dev": "storybook dev -p 6006 --no-open",
    "storybook": "npm run dev",
    "build": "storybook build",
    "code:check": "run-s -c -n code:check:**",
    "code:check:prettier": "npm run s:prettier -- --check",
    "code:check:eslint": "npm run s:eslint",
    "code:fix": "run-s -c -n code:fix:**",
    "code:fix:prettier": "npm run s:prettier -- --write",
    "code:fix:eslint": "npm run s:eslint -- --fix",
    "s:prettier": "prettier \"**/*.{js,jsx,json,html,md,mdx,yml}\"",
    "s:eslint": "eslint \"**/*.{js,jsx,yml,yaml}\"",
    "prepare": "husky"
  }
}
